{
  "name": "sj-tig",
  "short_name": "sj-tig",
  "version": "0.0.5",
  "manifest_version": 2,
  "minimum_chrome_version": "33",
  "description": "A Browser App for local Git Repos",
  "offline_enabled": true,
  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },
  "permissions": [
    "storage",
    "unlimitedStorage",
    {"fileSystem": ["write", "retainEntries", "directory"]},
    "http://*/*",
    "https://*/*",
    {"socket": [ "tcp-connect", "tcp-listen" ]}
  ],
  "icons": {
    "16": "icons/git-icon-orange-16.png",
    "128": "icons/git-icon-orange-128.png",
    "256": "icons/git-icon-orange-256.png"
  }
}
