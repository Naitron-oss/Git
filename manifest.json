{
  "name": "js-tig",
  "short_name": "sj-tig",
  "version": "0.0.1",
  "manifest_version": 2,
  "minimum_chrome_version": "31",
  "description": "A Browser App for local Git Repos",
  "offline_enabled": true,
  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },
  "permissions": [
    "storage",
    "unlimitedStorage",
    {"fileSystem": ["write", "retainEntries", "directory"]},
    "http://*/*",
    "https://*/*",
    {"socket": [ "tcp-connect", "tcp-listen" ]}
  ],
  "icons": {
    
  }
}